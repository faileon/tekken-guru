{
  "hosting": {
    "public": "dist/tekken-guru",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": [
    {
      "database": "default",
      "rules": "firestore.rules"
    },
    {
      "database": "tekken8",
      "rules": "firestore.rules"
    }
  ]
}

